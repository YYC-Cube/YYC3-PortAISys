generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  role      UserRole @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  modelConfigs ModelConfig[]
  plugins      Plugin[]
  workflows    Workflow[]
  auditLogs    AuditLog[]
}

enum UserRole {
  USER
  ADMIN
  DEVELOPER
}

model ModelConfig {
  id        String   @id @default(cuid())
  name      String
  provider  String
  apiKey    String   @default("")
  modelName String
  baseUrl   String   @default("")
  isActive  Boolean  @default(true)
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Plugin {
  id          String   @id @default(cuid())
  name        String
  version     String
  description String
  author      String
  url         String
  isActive    Boolean  @default(true)
  userId      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Workflow {
  id          String   @id @default(cuid())
  name        String
  description String
  definition  Json
  isActive    Boolean  @default(true)
  userId      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  runs WorkflowRun[]
}

model WorkflowRun {
  id         String   @id @default(cuid())
  workflowId String
  status     RunStatus @default(PENDING)
  input      Json
  output     Json?
  error      String?
  startedAt  DateTime @default(now())
  completedAt DateTime?

  // Relations
  workflow Workflow @relation(fields: [workflowId], references: [id], onDelete: Cascade)
}

enum RunStatus {
  PENDING
  RUNNING
  SUCCESS
  FAILED
}

model SystemConfig {
  id        String   @id @default(cuid())
  key       String   @unique
  value     Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model AuditLog {
  id        String   @id @default(cuid())
  action    String
  entityType String
  entityId  String
  userId    String?
  details   Json
  createdAt DateTime @default(now())

  // Relations
  user User? @relation(fields: [userId], references: [id])
}
