{
  "dashboard": {
    "id": null,
    "uid": "yyc3-system-overview",
    "title": "YYC³ PortAISys - 系统总览",
    "tags": ["yyc3", "system", "overview"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        },
        "type": "graph",
        "title": "CPU使用率",
        "targets": [
          {
            "expr": "yyc3_process_cpu_usage",
            "legendFormat": "CPU使用率 (%)",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "percent",
            "label": "使用率",
            "show": true
          },
          {
            "show": false
          }
        ],
        "alert": {
          "conditions": [
            {
              "evaluator": {
                "params": [80],
                "type": "gt"
              },
              "operator": {
                "type": "and"
              },
              "query": {
                "params": ["A", "5m", "now"]
              },
              "reducer": {
                "params": [],
                "type": "avg"
              },
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "frequency": "1m",
          "handler": 1,
          "name": "CPU使用率告警",
          "noDataState": "no_data"
        }
      },
      {
        "id": 2,
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        },
        "type": "graph",
        "title": "内存使用",
        "targets": [
          {
            "expr": "yyc3_process_memory_usage_bytes / 1024 / 1024",
            "legendFormat": "总内存 (MB)",
            "refId": "A"
          },
          {
            "expr": "yyc3_process_heap_usage_bytes / 1024 / 1024",
            "legendFormat": "堆内存 (MB)",
            "refId": "B"
          }
        ],
        "yaxes": [
          {
            "format": "decmbytes",
            "label": "内存",
            "show": true
          },
          {
            "show": false
          }
        ]
      },
      {
        "id": 3,
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        },
        "type": "graph",
        "title": "HTTP请求吞吐量",
        "targets": [
          {
            "expr": "rate(yyc3_http_requests_total[5m])",
            "legendFormat": "{{ method }} {{ route }}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "reqps",
            "label": "请求/秒",
            "show": true
          },
          {
            "show": false
          }
        ]
      },
      {
        "id": 4,
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 8
        },
        "type": "graph",
        "title": "API响应时间",
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(yyc3_http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "P50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, rate(yyc3_http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "P95",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, rate(yyc3_http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "P99",
            "refId": "C"
          }
        ],
        "yaxes": [
          {
            "format": "s",
            "label": "响应时间",
            "show": true
          },
          {
            "show": false
          }
        ]
      },
      {
        "id": 5,
        "gridPos": {
          "h": 6,
          "w": 8,
          "x": 0,
          "y": 16
        },
        "type": "stat",
        "title": "总请求数",
        "targets": [
          {
            "expr": "sum(yyc3_http_requests_total)",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value",
          "justifyMode": "auto",
          "textMode": "auto"
        }
      },
      {
        "id": 6,
        "gridPos": {
          "h": 6,
          "w": 8,
          "x": 8,
          "y": 16
        },
        "type": "stat",
        "title": "错误率",
        "targets": [
          {
            "expr": "rate(yyc3_http_requests_total{status_code=~\"5..\"}[5m]) / rate(yyc3_http_requests_total[5m]) * 100",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value",
          "unit": "percent"
        }
      },
      {
        "id": 7,
        "gridPos": {
          "h": 6,
          "w": 8,
          "x": 16,
          "y": 16
        },
        "type": "stat",
        "title": "缓存命中率",
        "targets": [
          {
            "expr": "rate(yyc3_cache_hits_total[5m]) / (rate(yyc3_cache_hits_total[5m]) + rate(yyc3_cache_misses_total[5m])) * 100",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value",
          "unit": "percent"
        }
      },
      {
        "id": 8,
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 22
        },
        "type": "graph",
        "title": "数据库查询性能",
        "targets": [
          {
            "expr": "rate(yyc3_database_queries_total[5m])",
            "legendFormat": "查询/秒",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, rate(yyc3_database_query_duration_seconds_bucket[5m]))",
            "legendFormat": "P95延迟",
            "refId": "B"
          }
        ],
        "yaxes": [
          {
            "format": "short",
            "label": "QPS",
            "show": true
          },
          {
            "format": "s",
            "label": "延迟",
            "show": true
          }
        ]
      },
      {
        "id": 9,
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 22
        },
        "type": "graph",
        "title": "错误统计",
        "targets": [
          {
            "expr": "rate(yyc3_errors_total[5m])",
            "legendFormat": "{{ type }} - {{ severity }}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "short",
            "label": "错误/秒",
            "show": true
          },
          {
            "show": false
          }
        ]
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"]
    }
  }
}